<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <!-- Name Input-->
    <div class="control-group">
      <label class="control-label">Name</label>
      <div class="controls">
        <%= f.input :name, :autofocus => true, label: false %>
      </div>
    </div>

    <!-- Email Input-->
    <div class="control-group">
      <label class="control-label">Email</label>
      <div class="controls">
        <%= f.input :email, :autofocus => true, label: false %>
      </div>
    </div>

    <!-- New Password Input-->
    <div class="control-group">
      <label class="control-label">New Password</label>
      <div class="controls">
        <%= f.input :password, :autofocus => true, label: false %>
      </div>
    </div>

    <!-- New Password Confirmation Input-->
    <div class="control-group">
      <label class="control-label">New Password Confirmation</label>
      <div class="controls">
        <%= f.input :password_confirmation, :autofocus => true, label: false %>
      </div>
    </div>

    <!-- Current Password Input-->
    <div class="control-group">
      <label class="control-label">Current Password</label>
      <div class="controls">
        <%= f.input :current_password, :autofocus => true, label: false %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit "Update", class: "btn btn-primary"%>
    </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>
